# Default settings for docker-compose
# @see https://docs.docker.com/compose/reference/envvars/#compose_file
COMPOSE_PROJECT_NAME=skill-test
COMPOSE_FILE=docker-compose.yml
COMPOSE_CONVERT_WINDOWS_PATHS=1

# build
PHP_VERSION=7.4
TIMEZONE=UTC
NETWORKS_DRIVER=bridge

# application
APP_USER=www-data
APP_GROUP=www-data
APP_USER_ID=1000
APP_GROUP_ID=1000
APP_CODE_PATH_HOST=../
APP_CODE_PATH_CONTAINER=/var/www/current

# required so we can reach the nginx server from other containers via that hostname
APP_HOST=skill-test.local

# nginx
NGINX_HOST_HTTP_PORT=8090
NGINX_HOST_HTTPS_PORT=8450

# php-cli
WORKSPACE_HOST_SSH_PORT=2230

# mysql
MYSQL_ROOT_PASSWORD=admin
MYSQL_DATABASE=skill-test
MYSQL_USER=admin
MYSQL_PASSWORD=admin
MYSQL_HOST_PORT=6050
